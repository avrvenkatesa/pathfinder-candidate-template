{
  "name": "pathfinder-candidate-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:api": "tsx server/index.ts",
    "dev:api": "cross-env PORT=4000 tsx server/index.ts",

    "// --- Unit/API tests (Vitest)": "",
    "test": "vitest run -c vitest.config.ts",
    "test:watch": "vitest -c vitest.config.ts",
    "test:api": "vitest run -c vitest.config.ts --dir tests/api",



    "// --- End-to-end tests (Playwright)": "",
    "test:e2e": "playwright test -c playwright.config.ts",

    "// --- Convenience combo": "",
    "test:all": "npm run test:api && npm run test:e2e"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
